<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/renjichoice_backgournd"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    >
<!--退出按钮-->
    <ImageButton
        android:id="@+id/return_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/return_main"
        />
<!--难度选择按钮-->
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/medium"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/low_diff"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/low"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/medium_diff"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/high"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/high_diff"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>

</RelativeLayout>